<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/view_message_wrapper"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/view_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|top"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/ic_friend"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:failureImage="@drawable/ic_friend"
            fresco:failureImageScaleType="fitCenter"
            fresco:roundAsCircle="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/view_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/bg_message_bubble"
            android:layout_gravity="start|center_vertical"
            android:gravity="start"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</RelativeLayout>